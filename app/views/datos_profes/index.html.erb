<p id="notice"><%= notice %></p>

 <div class="row">
    <div class="large-6 columns">
      <h2> Categorias</h2>
    </div>
    <div class="large-4 columns">
    </div>
    <div class="large-4 columns">
    </div>
    <div class="large-2 columns">
       
        <%= link_to '+ Categoria', new_categorium_path,  :class => "button expand" %>
    </div>
  </div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.title %></td>
        <td><%= categorium.user_id %></td>
        <td><%= link_to 'Show', categorium %></td>
        <td><%= link_to 'Edit', edit_categorium_path(categorium) %></td>
        <td><%= link_to 'Destroy', categorium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


