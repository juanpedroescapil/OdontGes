        <td><%= link_to 'Edit', edit_sugerencium_path(sugerencium) %></td>
        <td><%= link_to 'Destroy', sugerencium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


