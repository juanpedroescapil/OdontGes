<%= simple_form_for(@paciente) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :apellido %>
    <%= f.input :nombre %>
    <%= f.input :tipo_doc %>
    <%= f.input :num_doc %>
    <%= f.input :fecha_nac %>
    <%= f.input :obra_soc %>
    <%= f.input :numero_afil %>
    <%= f.input :grupo_sang %>
    <%= f.input :direccion %>
    <%= f.input :ciudad %>
    <%= f.input :telefono %>
    <%= f.input :email %>
    <%= f.input :comentarios %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
