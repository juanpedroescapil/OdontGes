<h1>Mis Sugerencias</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Titulo</th>
      <th>Detalle</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sugerencia.each do |sugerencium| %>
      <tr>
